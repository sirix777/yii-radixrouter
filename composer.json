{
    "name": "sirix/yii-radixrouter",
    "type": "library",
    "description": "Yii router RadixRouter adapter",
    "keywords": [
        "router",
        "radixrouter",
        "radix tree",
        "radix",
        "yii3",
        "yii"
    ],
    "authors": [
        {
            "name": "Sirix",
            "homepage": "https://github.com/sirix777"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "8.2 - 8.5",
        "wilaak/radix-router": "^3.5",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/simple-cache": "^2.0 || ^3.0",
        "yiisoft/http": "^1.2",
        "yiisoft/router": "^4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "maglnet/composer-require-checker": "^4.7.1",
        "nyholm/psr7": "^1.8",
        "phpbench/phpbench": "^1.3",
        "phpunit/phpunit": "^11.5.46",
        "psr/container": "^2.0.2",
        "yiisoft/di": "^1.4",
        "yiisoft/test-support": "^3.1"
    },
    "provide": {
        "yiisoft/router-implementation": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Sirix\\Router\\RadixRouter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sirix\\Router\\RadixRouter\\Tests\\": "tests",
            "Sirix\\Router\\RadixRouter\\Benchmarks\\": "benchmarks"
        }
    },
    "extra": {
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "params": "params.php",
            "di": "di.php",
            "di-web": "di-web.php"
        },
        "bamarni-bin": {
            "bin-links": false,
            "forward-command": true,
            "target-directory": "tools"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "composer/package-versions-deprecated": true,
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "analyse-deps": "tools/composer-dependency-analyser/vendor/bin/composer-dependency-analyser",
        "bench": "vendor/bin/phpbench run --report=default",
        "check": [
            "@cs-check",
            "@rector",
            "@phpstan",
            "@test"
        ],
        "cs-check": "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -vvv --dry-run --diff",
        "cs-fix": "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -vvv",
        "normalize": "@composer bin composer-normalize normalize --diff ../../composer.json",
        "phpstan": "php tools/phpstan/vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=2G",
        "rector": "php tools/rector/vendor/bin/rector process --dry-run --xdebug --memory-limit=2G",
        "test": "phpunit --order-by=random --testdox --colors=always"
    }
}
